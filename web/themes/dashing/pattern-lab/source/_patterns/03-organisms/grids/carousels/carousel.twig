{#
/**
 * @file
 * Grid - Pyramid grid.
 *
 * Responsive grid creates rows of 4, 3, 2, and 1 boxes at specific breakpoints.
 *
 * @see `scss/30-global/_grids.scss`
 */
#}

<div class="row subregion">
    <div class="col-xs-12">
        {% if carousel_title %}
            <h3 class="block-title text-md-center">{{ carousel_title_text }}</h3>
        {% endif %}

        <div class="owl-carousel {{ carousel_class }}">

          {% block items %}
            {% for item in items %}
                {{ item.content }}
            {% endfor %}
          {% endblock %}

        </div>
        {% if carousel_button %}
            <p class="text-xs-center"><a class="btn btn--alt btn-selfcall" href="#">{{ carousel_button_text }}</a></p>
        {% endif %}
    </div>
</div>


{#
/**

 xs: 0,
  sm: 576px,
  md: 768px,
  lg: 992px,
  xl: 1200px

*/
#}

<script>
    document.addEventListener("DOMContentLoaded", function(event) {
        jQuery('.{{ carousel_class }}').owlCarousel({
            loop:true,
            margin:10,
            nav:true,
            responsive:{
                0:{
                    items:{{ carousel_xs }}
                },
                576:{
                    items:{{ carousel_sm }}
                },
                768:{
                    items:{{ carousel_md }}
                },
                992:{
                    items:{{ carousel_lg }}
                }
                ,
                1200:{
                    items:{{ carousel_xl }}
                }
            }
        });
    });
</script>