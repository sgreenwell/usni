{#
/**
 * @file
 * Grid - Pyramid grid.
 *
 * Responsive grid creates rows of 4, 3, 2, and 1 boxes at specific breakpoints.
 *
 * @see `scss/30-global/_grids.scss`
 */
#}
<div class="pyramid-grid">

  {% block items %}
    {% for item in items %}
      <div{{ item.attributes.addClass('grid-item') }}>
        {{ item.content }}
      </div>
    {% endfor %}
  {% endblock %}

</div>

